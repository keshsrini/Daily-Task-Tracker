#include<bits/stdc++.h>
using namespace std;
long long find(vector<long long>& seg,int node, int nl, int nr, long long ql, long long qr){
    if(nl>qr||nr<ql) return 0;
    if(nl>=ql&&nr<=qr) return seg[node];
    int mid=(nl+nr)>>1;
    long long left=find(seg,node<<1,nl,mid,ql,qr);
    long long right=find(seg,(node<<1)|1,mid+1,nr,ql,qr);
    return left+right;
}
void upd(vector<long long>& seg,int node,int nl,int nr,long long idx,long long val){
    if(nl==nr){
        seg[node]=val;
        return;
    }
    int mid=(nl+nr)>>1;
    if(idx<=mid) upd(seg,node<<1,nl,mid,idx,val);
    else upd(seg,(node<<1)+1,mid+1,nr,idx,val);
    seg[node]=seg[node<<1]+seg[(node<<1)|1];
}
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n,q;
    cin>>n>>q;
    vector<int> arr(n+1);
    for(int i=1;i<=n;i++) cin>>arr[i];
    int lg=1;
    while(lg<n) lg<<=1;
    vector<long long> seg(lg<<1,0);
    for(int i=1;i<=n;i++){
        seg[lg+i-1]=arr[i];
    }
    for(int i=lg-1;i>0;i--){
        seg[i]=seg[i<<1]+seg[(i<<1)|1];
    }
    while(q--){
        int t;
        cin>>t;
        if(t==1) {
            long long x;
            cin>>x;
            long long val=find(seg,1,1,lg,x,x);
            long long val1=find(seg,1,1,lg,x+1,x+1);
            upd(seg,1,1,lg,x,val1);
            upd(seg,1,1,lg,x+1,val);
        } else {
            long long l,r;
            cin>>l>>r;
            cout<<find(seg,1,1,lg,l,r)<<endl;
        }
    }
}
