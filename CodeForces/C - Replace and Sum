#include<bits/stdc++.h>
using namespace std;
int main() {
    int t;
    cin>>t;
    while(t--) {
        int n,q;
        cin>>n>>q;
        vector<long long> arr(n),brr(n),crr(n),frr(n);
        for(int i=0;i<n;i++) cin>>arr[i];
        for(int i=0;i<n;i++) cin>>brr[i];
        for(int i=0;i<n;i++) crr[i]=max(arr[i],brr[i]);
        stack<long long> s;
        for (int i=n-1;i>=0;i--) {
            while (!s.empty() && s.top() < crr[i]) {
                s.pop();
            }
            if (s.empty()) frr[i]=crr[i];
            else frr[i]=s.top();
            s.push(frr[i]);
        }
        vector<long long> p(n+1,0);
        for (int i=0;i<n;i++) {
            p[i+1]=p[i]+frr[i];
        }
        for(int i=0;i<q;i++) {
            int l,r;
            cin>>l>>r;
            cout<<p[r]-p[l-1];
            if(i < q-1) cout<<" ";
        }cout<<endl;
    }
}
