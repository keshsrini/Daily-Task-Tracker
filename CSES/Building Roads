#include<bits/stdc++.h>
using namespace std;
void bfs(int i, vector<vector<int>> &adj, vector<bool> &vis) {
    queue<int> q;
    q.push(i);
    vis[i]=true;
    while (!q.empty()) {
        int u=q.front();
        q.pop();
        for (int n:adj[u]) {
            if (vis[n]==false) {
                q.push(n);
                vis[n]=true;
            }
        }
    }
}
int main() {
    int n,m;
    cin>>n>>m;
    vector<vector<int>> adj(n+1);
    for (int i=0;i<m;i++) {
        int u,v;
        cin>>u>>v;
        adj[u].push_back(v);
        adj[v].push_back(u);
    }
    vector<bool> vis(n+1,false);
    vector<int> cities;
    for (int i=1;i<=n;i++) {
        if (vis[i]==false) {
            cities.push_back(i);
            bfs(i,adj,vis);
        }
    }
    int k=cities.size()-1;
    cout<<k<<endl;
    for (int i=0;i<k;i++) {
        cout<<cities[i]<<" "<<cities[i+1]<<endl;
    }
}
