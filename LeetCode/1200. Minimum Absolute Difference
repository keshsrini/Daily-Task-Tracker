class Solution {
public:
    vector<vector<int>> minimumAbsDifference(vector<int>& arr) {
        int n=arr.size();
        sort(arr.begin(), arr.end());
        int mini=arr[1]-arr[0];
        for(int i=0;i<n-1;i++){
            mini=min(mini,arr[i+1]-arr[i]);
        }   
        vector<vector<int>> sol;
        for(int i=0;i<n-1;i++){
            if(arr[i+1]-arr[i]==mini){
                sol.push_back({arr[i],arr[i+1]});
            }
        }
        return sol;
    }
};
